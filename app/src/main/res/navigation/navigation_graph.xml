<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.resourcefulparenting.ui.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_explore"
        android:name="com.resourcefulparenting.ui.explore.ExploreFragment"
        android:label="Explore"
        tools:layout="@layout/fragment_explore" />

    <fragment
        android:id="@+id/navigation_activity"
        android:name="com.resourcefulparenting.ui.activity.ActivityFragment"
        android:label="Activity"
        tools:layout="@layout/fragment_activity" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.resourcefulparenting.ui.account.AccountFragment"
        android:label="Account"
        tools:layout="@layout/fragment_account" />

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.resourcefulparenting.ui.login.LoginFragment"
        android:label="Login"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/navigation_email_login"
        android:name="com.resourcefulparenting.ui.emaillogin.EmailLoginFragment"
        android:label="Email login"
        tools:layout="@layout/fragment_email_login" />

    <fragment
        android:id="@+id/navigation_forgot_password"
        android:name="com.resourcefulparenting.ui.forgotpassword.ForgotPasswordFragment"
        android:label="Forgot Password"
        tools:layout="@layout/fragment_forgot_password" />

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.resourcefulparenting.ui.register.RegisterFragment"
        android:label="Register"
        tools:layout="@layout/fragment_register" />

    <fragment
        android:id="@+id/navigation_verify_email"
        android:name="com.resourcefulparenting.ui.verifyemail.VerifyEmailFragment"
        android:label="Verify Email"
        tools:layout="@layout/fragment_verify_email" />

    <fragment
        android:id="@+id/navigation_email_otp"
        android:name="com.resourcefulparenting.ui.emailotp.EmailOtpFragment"
        android:label="Email OTP"
        tools:layout="@layout/fragment_email_otp" />
</navigation>